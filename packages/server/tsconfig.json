{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "node",
      "express",
      "pg",
      "chance",
      "bcrypt",
      "jsonwebtoken",
      "cors",
      "cookie-parser",
      "sentiment",
      "vitest/globals"
    ],
    "verbatimModuleSyntax": true,
    "paths": {
      "@server/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
