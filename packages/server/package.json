{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx -r tsconfig-paths/register ./src/index.ts'",
    "migrate:up": "dotenv -e .env tsx src/database/migrations/migrateLatest.ts",
    "migrate:down": "dotenv -e .env tsx src/database/migrations/migrateDown.ts",
    "migrate:latest": "dotenv -e .env tsx --tsconfig tsconfig.json src/database/migrations/migrateLatest.ts",
    "create-migration": "tsx --tsconfig tsconfig.json src/database/migrations/createMigration.ts",
    "seed": "dotenv -e .env tsx src/database/seed/seed.ts",
    "node-es": "node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL from \"node:url\"; register(\"./loader.js\", pathToFileURL(\"./\"));'",
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --noEmit -p tsconfig.test.json",
    "prettier": "prettier . --check",
    "test": "NODE_ENV=test vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"*.ts\"",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "npm run format && npm run lint -- --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/chance": "^1.1.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.16.5",
    "@types/pg": "^8.11.10",
    "@types/sentiment": "^5.0.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "bcrypt": "^5.1.1",
    "chance": "^1.1.12",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.4",
    "nodemon": "^3.1.4",
    "pg": "^8.12.0",
    "sentiment": "^5.0.2",
    "trpc": "^0.11.3",
    "trpc-panel": "^1.3.4",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  }
}
